{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start (Development)",
      "program": "${workspaceFolder}/index",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development",
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start (E2E)",
      "program": "${workspaceFolder}/index",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "e2e",
        "NODE_CONFIG": "{\"machines\":[{\"_id\":\"5edc08f013d44b3f39f43ab0\",\"failsafe\":\"M112\\n\",\"path\":\"test-machine\",\"baudRate\":250000}]}"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--colors",
        "--exit",
        "--timeout",
        "60000",
        "${workspaceFolder}/tests/index"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}